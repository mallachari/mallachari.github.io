{
  "formats": ["oas3"],
  "extends": ["https://unpkg.com/@backmarket-api/rulesets@1.4.0", "oas:asyncapi", "some-npm-module"],
  "rules": {
    "info-matches-stoplight": {
      "description": "This is an example rule",
      "message": "Info must contain Stoplight",
      "given": "$.info",
      "recommended": true,
      "type": "style",
      "then": {
        "field": "title",
        "function": "pattern",
        "functionOptions": {
          "match": "Stoplight"
        }
      }
    }
  }
}
